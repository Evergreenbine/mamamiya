<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.vo.Milk">

    <select id="list"  resultType="app.vo.Milk">
        select * from milk m,brand b where m.bid = b.bid
        <if test="bid != null">
            and b.bid = #{bid}
        </if>
        <if test="stage != null">
            and stage = #{stage}
        </if>
        <if test="cata != null">
            and cata = #{cata}
        </if>
        <if test="age != null">
            and age = #{age}
        </if>
        <if test="price != null">
            and price between #{startprice} and #{endprice}
        </if>
    </select>
</mapper>